@{
    ViewBag.Title = "Home Page";
}

<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="../assets/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <!-- CSS Files -->
    <link href="../assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="../assets/css/now-ui-dashboard.css?v=1.0.1" rel="stylesheet" />
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href="../assets/demo/demo.css" rel="stylesheet" />
</head>

<body class="">
    <div class="wrapper">
        <div class="main-panel" style="width:100%">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg fixed-top navbar-absolute bg-primary fixed-top">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                        <div class="navbar-toggle">
                            <button type="button" class="navbar-toggler">
                                <span class="navbar-toggler-bar bar1"></span>
                                <span class="navbar-toggler-bar bar2"></span>
                                <span class="navbar-toggler-bar bar3"></span>
                            </button>
                        </div>
                        @*<a class="navbar-brand" href="#pablo">Dashboard</a>*@
                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navigation">
                        @if (Request.IsAuthenticated)
                         {
                             if (User.IsInRole("Administrateur"))
                             {
                                   <ul class="nav navbar-nav">
                                       <li class="btn btn-primary" style="background-color:dodgerblue;margin-right:800px;">
                                       <a href="/Candidat/Index">Candidats</a>
                                       </li>
                                   </ul>
                             }
                         }
                        <ul class="navbar-nav">
                            @Html.Partial("_LoginPartial")
                        </ul>
                    </div>
                </div>
            </nav>
            <div style="display:flex; width:100%;height:500px;position:relative;margin-top:70px;">
                <div style="width:1000px;position:relative;margin-left:210px;margin-top:40px;margin-bottom:30px;">
                    <div style="height:100%;width:800px;position:relative;background-image: url('../../assets/img/Sans titre-22.png');background-repeat: no-repeat;margin-left:150px;">
                        <div style="width:400px;height:100%;position:relative;margin-left:350px;">
                            <div style="width:300px;height:300px;position:relative;margin-left:40px;">
                                <h1 style="font-size:35px;">
                                Rédiger facilement de 
                                    <span class="badge-blue">magnifiques </span><strong>CV</strong>
                                </h1>
                                <h2 style="font-size:15px;">
                                    Grâce à nos générateurs de CV, créez simplement et rapidement des candidatures convaincantes.
                                </h2>
                                <div style="width:200px;height:50px;background-color:rgb(158, 207, 63);position:relative;">
                                    <a href="../Account/Register">
                                        <div style="color:white;font-family:Arial, Helvetica, sans-serif;font-weight:600;font-size:12px;text-align:center;line-height:50px;">ESSAYER GRATUITEMENT</div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div style="display:flex; width:100%;height:500px;position:relative;background-color:#00abec;">
                <div style="width:75%;height:400px;position:relative;margin-left:180px;margin-top:50px;">
                    <div style="width:100%;height:80px;position:relative;">
                        <h2 style="color:#cccccc;">Générateur de CV</h2>
                    </div>
                    <div class="row" style="width:100%;height:350px;position:relative;margin-left:0px;">
                        <div class="column" style="height:100%;width:350px;position:relative;margin-left:5px;">
                            <h6><b>Des modèles de CV adaptés</b></h6>
                            <div style="width:100%;height:180px;position:relative;background-image: url('../../assets/img/Sans titre-100.png');background-repeat: no-repeat;">
                                <a href="#"></a>
                            </div>
                            <br />
                            <div class="txt">
                                Conçus par des professionnels du conseil à l’emploi,
                                <b>nos modèles de CV vous aideront à valoriser vos compétences</b>
                                , quel que soit votre parcours, que vous soyez débutant ou expérimenté.
                            </div>
                        </div>
                        <div class="column" style="height:100%;width:350px;position:relative;;margin-left:10px;">
                            <h6><b>Des mises en pages spéctaculaires</b></h6>
                            <div style="width:100%;height:180px;position:relative;background-image: url('../../assets/img/Sans titre-102.png');background-repeat: no-repeat;">
                                <a href="#"></a>
                            </div>
                            <br />
                            <div class="txt">
                                Grâce à notre interface intuitive, vous créez vos cv en toute simplicité,
                                <b>plus besoin de vous soucier de la mise en page</b>
                                , elle est automatique.
                                <b>Changez de design en un clic</b>
                            </div>
                        </div>
                        <div class="column" style="height:100%;width:350px;position:relative;margin-left:10px;">
                            <h6><b>Une intérface facile à utiliser</b></h6>
                            <div style="width:100%;height:180px;position:relative;background-image: url('../../assets/img/Sans titre-103.png');background-repeat: no-repeat;">
                                <a href="#"></a>
                            </div>
                            <br />
                            <div class="txt">
                                Découvrez toutes les fonctionnalités pour comprendre comment vous allez pouvoir rédiger de meilleurs CV avec moins d’effort
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
