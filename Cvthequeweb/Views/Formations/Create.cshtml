        }
    </style>
    <script>
        var test = function () {
            $.ajax({
                url: "/Formations/Plus?diplome=" + $("#diplome").val() + "&specialite=" + $("#specialite").val()
                    + "&date_obtention=" + $("#date").val()
                    + "&etablissement=" + $("#etablissement").val()
                    + "&niveau=" + $("#niveau").val(),
                type: "POST",
                error: function () {
                    alert("Error")
                },
                success: function () {
                    $("#diplome").val("");
                    $("#specialite").val("");
                    $("#date").val("");
                    $("#etablissement").val("");
                    $("#niveau").val("");
                }
            });
        }
    </script>
