                                <table>
                                    <tr>
                                        <td>
                                            <div class="form-group col-md-8">
                                                <label class="control-label">Diplôme</label>
                                                @Html.TextBoxFor(Model => Model.Diplome, new { @class = "form-validate form-control col", placeholder = "Diplôme", required = "true", id = "diplome" })
                                            </div>
                                            <div class="form-group col-md-8">
                                                <label class="control-label">Spécialité</label>
                                                @Html.TextBoxFor(Model => Model.Specialite, new { @class = "form-validate form-control col", placeholder = "Commerce", required = "true", id = "specialite" })
                                            </div>
                                            <div class="form-group col-md-8">
                                                <label class="control-label">Date d'obtention</label>
                                                @Html.EditorFor(Model => Model.Date_Obtention, new { htmlAttributes = new { @class = "form-validate form-control col datepicker", placeholder = "01/06/2018", required = "true", id = "date" } })
                                            </div>
                                        </td>
                                        <td>
                                            <div class="form-group col-md-8">
                                                <label class="control-label">Etablissement</label>
                                                @Html.TextBoxFor(Model => Model.Etablissement, new { @class = "form-validate form-control col", placeholder = "ISTA HAY HASSANI 1", required = "true", id = "etablissement" })
                                            </div>
                                            <div class="form-group col-md-8">
                                                <label class="control-label">Niveau</label>
                                                @Html.DropDownListFor(Model => Model.Niveau, new SelectList(new List<Object> { new { value = "TS", text = "TS" }, new { value = "T", text = "T" }, new { value = "Formation Qualifiante", text = "Formation Qualifiante" }, new { value = "Autre", text = "Autre" } }, "value", "text"), "Veuillez Selectionner", new { @class = "form-validate form-control col", required = "true", id = "niveau" })
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                                <button class="btn btn-outline" type="button" onclick="test()" style="float:right">Plus </button>
