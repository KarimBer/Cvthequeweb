    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="card " style="width: 660px; margin: 80px auto">
            <div class="card-header text-center py-4 ConnectAndInscrire">
                <p class="h2 ">S’inscrire</p>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="card-body">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Nom :</label>
                        @Html.TextBoxFor(m => m.Nom, new { @class = "form-control", placeholder = "Nom" })
                        @Html.ValidationMessageFor(m => m.Nom, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-6">
                        <label>Prénom :</label>
                        @Html.TextBoxFor(m => m.Prenom, new { @class = "form-control", placeholder = "Prenom" })
                        @Html.ValidationMessageFor(m => m.Prenom, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Téléphone :</label>
                        @Html.TextBoxFor(m => m.telephone, new { @class = "form-control", placeholder = "Telephone" })
                        @Html.ValidationMessageFor(m => m.telephone, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-6">
                        <label>Email :</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Mot de Passe :</label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Mote de Passe" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-6">
                        <label>Confirmer le mot de passe :</label>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirmer Mote de Passe" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <input type="submit" class="btn btn-success btn-block" style="margin: 0 auto" value="S’inscrire" />
            </div>
        </div>
    }
